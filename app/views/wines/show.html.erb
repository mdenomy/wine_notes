<% provide(:title, @wine.full_name) %>
<h1>
  <%= @wine.full_name %>
</h1>

<p>
<b>Grape/Region: </b>
<% unless @wine.grape_wine_name.blank? %>
     <%= @wine.grape_wine_name %>
<% else %>
     Unknown
<% end %>
</p>

<p>
<% unless @wine.color.blank? && @wine.classification.blank? %>
  <%= @wine.color %>
  <%= @wine.classification %>
  Wine
<% end %>
</p>

<p>
  <%= link_to 'Add Review', new_wine_review_path(@wine.id), :class => "btn btn-primary btn-large" %>
  <% if @wine.reviews.any? %>
    <h3>Reviews (<%= @wine.reviews.count %>)</h3>
    <ol class="reviews">
      <%= render @reviews %>
    </ol>
    <%= will_paginate @reviews %>
  <% end %>
</p>

<div>
<%= link_to 'Edit', edit_wine_path(@wine) %>
<%= link_to 'Back', wines_path %>
</div>