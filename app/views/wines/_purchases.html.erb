<div class="reviewSection span3">

  <div class="span3">
  <h2>Prices</h2>
  </div>
  <div class="span3">
    <div class="ratingButtonGroup">
      <%= link_to 'Record Purchase', new_wine_purchase_path(@wine.id), :class => "btn btn-large" %>
      <br/>
    </div>
  </div>
  <div class="span6">
    <table>
      <thead>
      </thead>
      <tbody>
      <% @purchases.each do |purchase| %>
        <tr>
          <td><%= "$#{number_with_precision(purchase.price, precision: 2)}" %></td>
        </tr>
        <tr>
          <td><%= purchase.store %></td>
        </tr>
        <tr>
          <td class="reviewDate"><%= purchase.date %></td>
        </tr>
        <tr>
          <td class="spaceRow">&nbsp;</td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <%= will_paginate @reviews %>

  </div>
</div>

