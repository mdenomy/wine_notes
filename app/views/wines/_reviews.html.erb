<div class="reviewSection">

  <% if @wine.reviews.any? %>
    <h2>Recent Reviews</h2>

    <div class="span4 pull-left">
      <% if @wine.reviews.any? %>
        <div class="averageRating">
          <span class="subHeading">Average Rating: </span>
          <%= number_with_precision(@wine.reviews.average(:score), precision: 1) %> / 5.0
        </div>

      <% end %>
      <div class="ratingButtonGroup">
        <%= link_to 'Rate It!', new_wine_review_path(@wine.id), :class => "btn btn-large" %>
      </div>
    </div>

    <div class="span8">
      <table>
        <thead>
        </thead>
        <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td>
              <% review.score.times do %>
                âœ¯
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="reviewSummary"><%= review.summary %></td>
          </tr>
          <tr>
            <td class="reviewDate"><%= review.date.strftime("%m/%d/%Y")%></td>
          </tr>
            <td class="spaceRow">&nbsp;</td>
         <% end %>
        </tbody>
      </table>
      <%= will_paginate @reviews %>
    </div>
  <% end %>
</div>