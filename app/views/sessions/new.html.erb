<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<br/>
<div>
    <%= simple_form_for(:session, :html => {:class => 'form-inline' }, url: sessions_path) do |f|  %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.submit 'Sign in', :class => 'btn btn-large btn-primary' %>
    <% end %>
</div>
