<div class="reviewSection">

  <div class="row">
    <div class="span=1">
      <span class="wine-category">Prices</span>
    </div>

      <div class="span2">
        <%= link_to 'Add Purchase', new_wine_purchase_path(@wine.id), :class => "btn btn-large" %>
      </div>
  </div>

  <div class="row">
    <div class="span4">
      <% unless @purchases.nil? %>
        <%= will_paginate @purchases, :param_name => 'purchases_page', :page_links => false %>
        <table>
          <thead>
          </thead>
          <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
              <td><%= "$#{number_with_precision(purchase.price, precision: 2)}" %></td>
            </tr>
            <tr>
              <td><%= purchase.store %></td>
            </tr>
            <tr>
              <td class="reviewDate"><%= purchase.date %></td>
            </tr>
            <tr>
              <td class="spaceRow">&nbsp;</td>
            </tr>
          <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

