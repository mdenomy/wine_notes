<div class="reviewSection">
  <h2>Reviews</h2>

  <div class="span3 pull-left">
    <div class="ratingButtonGroup">
      <%= link_to 'Rate It!', new_wine_review_path(@wine.id), :class => "btn btn-large" %>
    </div>
  </div>

  <% if @wine.reviews.any? %>
    <div class="span6">
      <table>
        <thead>
        </thead>
        <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td>
              <% review.score.times do %>
                âœ¯
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="reviewSummary"><%= review.summary %></td>
          </tr>
          <tr>
            <td class="reviewDate"><%= review.date.strftime("%m/%d/%Y")%></td>
          </tr>
            <td class="spaceRow">&nbsp;</td>
         <% end %>
        </tbody>
      </table>
      <%= will_paginate @reviews %>
    </div>
  <% end %>
</div>